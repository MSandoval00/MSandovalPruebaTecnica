@model ML.Disco
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetAll</h2>
<hr />
<a class="btn btn-success" href="@Url.Action("Form","Disco")"> Agregar</a>
<div class="container">
    <div class="row">
        @if (Model.Discos!= null)
        {
        <table class="table table-bordered table-responsive">
            <tr>
                <th>Id Disco</th>
                <th>Titulo</th>
                <th>Artista</th>
                <th>Genero</th>
                <th>Duración</th>
                <th>Año</th>
                <th>Distribuidora</th>
                <th>Ventas</th>
                <th>Disponible</th>
                <th>Acciones</th>


            </tr>
            <tbody>
                @foreach (ML.Disco disco in Model.Discos)
                {
                    <tr>
                        <td>@disco.IdDisco</td>
                        <td>@disco.Titulo</td>
                        <td>@disco.Artista</td>
                        <td>@disco.GeneroMusical</td>
                        <td>@disco.Duracion</td>
                        <td>@disco.Anio</td>
                        <td>@disco.Distribuidora</td>
                        <td>@disco.Ventas</td>
                        <td>@disco.Disponibilidad</td>
                        <td>
                            @*@Html.ActionLink("Eliminar", "Delete", "Disco", htmlAttributes: new { @class = "btn btn-danger" })*@
                            <a class="btn btn-danger" href="@Url.Action("Delete","Disco", new { IdDisco = disco.IdDisco })"> Eliminar</a>
                            <a class="btn btn-warning" href="@Url.Action("Form","Disco")"> Actualizar</a>
                        </td>

                    </tr>
                    

                }
                
            </tbody>
        </table>

            }
            else
            {
                <h1>No hay registros</h1>
            }
    </div>
</div>